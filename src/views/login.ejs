<!-- Pagina que reenderiza el login -->
<% include ./partials/header %>

  <div class="container">
    <div class="col-sm-6 mx-auto">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="text-center">
            <i class="fas fa-sign-in-alt"></i> Inicia Sesión
          </h1>
          <% if(message.lengh > 0) { %>
            <div class="alert alert-dismissible alert-danger">
              <%= message %>
            </div>
          <% } %>
          <form class="" action="/login" method="post">
            <div class="form-group">
              <label for="login">Usuario</label>
              <input type="text" name="login" class="form-control">
            </div>
            <div class="form-group">
              <label for="password">Contraseña</label>
              <input type="password" name="password" class="form-control">
            </div>
            <input type="submit" value="Login" class="btn btn-dark btn-lg">
          </form>
          <hr>
          <div class="text-center">
            <p>Nescesitas una cuenta?. <a href="/signup">Crea una.</a></p>
            <p>Regresa al <a href="/">Inicio</a>.</p>
          </div>
        </div>
        </a>
      </div>
    </div>
  </div>
<% include ./partials/footer %>
