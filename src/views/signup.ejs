<!-- Pagina que permite el registro de usuarios -->
<% include ./partials/header %>

  <div class="container">
    <div class="col-sm-6 mx-auto">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="text-center">
            <i class="fas fa-user-plus"></i> Crea una cuenta
          </h1>
          <% if(message.lengh > 0) { %>
            <div class="alert alert-danger">
              <%= message %>
            </div>
          <% } %>
          <form class="" action="/signup" method="post">
            <div class="form-group">
              <label for="login">Usuario</label>
              <input type="text" name="login" class="form-control">
            </div>
            <div class="form-group">
              <label for="password">Contraseña</label>
              <input type="password" name="password" class="form-control">
            </div>
            <input type="submit" class="btn btn-dark btn-lg" value="Crear">
          </form>
          <hr>
          <div class="text-center">
            <p>Tienes una cuenta? <a href="/login">Inicia sesión</a></p>
            <p>Regresa al <a href="/">Inicio</a>.</p>
          </div>
        </div>
        </a>
      </div>
    </div>
  </div>

<% include ./partials/footer %>
